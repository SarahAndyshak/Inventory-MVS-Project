@{
  Layout = "_Layout";
}

@using Inventory.Models;

<h1>Plants</h1>

@if (@Model.Count == 0)
{
  <h3>No plants have been added yet</h3>
} 
else
{
  <ul>
    @foreach (Plant plant in Model)
    {
      <li>@Html.ActionLink($"{plant.Description}", "Details", new { id = plant.PlantId }) | @plant.Collection.Name</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add new plant", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>